<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.structure.weights">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

  <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_PHONE_STATE" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/oie_transparent"
        android:label="@string/app_name"
        android:name="com.structure.weights.myapplication"
        android:theme="@style/ToolbarColoredBackArrow">
        <activity
            android:name="com.structure.weights.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowBackground="@color/windowBackground" />
        <activity
            android:name="com.structure.weights.FinalAmount"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.structure.weights.Drawer"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowBackground="@color/windowBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.structure.weights.TotalAmt"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.structure.weights.Index"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.structure.weights.Share"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.structure.weights.ContactUs"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.structure.weights.Like"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.structure.weights.Evaluation"
            android:screenOrientation="portrait" />
        <activity android:name="com.structure.weights.CalculateWGT"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>