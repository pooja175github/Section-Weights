<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>


    </style>
        <!-- style for the action bar backgrounds -->
        <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">


            <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
            <item name="android:subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
            <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
            <item name="subtitleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        </style>
        <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
            <item name="android:textColor">@color/textcolour</item>
            <item name="android:textSize">12sp</item>
        </style>


    <style name="ToolbarColoredBackArrow" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@color/bg</item>
        <item name="android:textColorSecondary">@color/bg</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    </style>
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>



        <style name="TextInputLayout">
            //hint color And Label Color in False State
            <item name="android:textColorHint">@color/textcolour</item>
            <item name="android:textSize">15sp</item>
            //Label color in True State And Bar Color False And True State
            <item name="colorAccent">@color/bg</item>
            <item name="colorControlNormal">@color/textcolour</item>
            <item name="colorControlActivated">@color/bg</item>
        </style>
    // BUTTON'S STYLE


</resources>
